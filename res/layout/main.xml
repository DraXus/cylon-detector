<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"
    />

<LinearLayout android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="wrap_content" android:id="@+id/LinearLayoutCamera" android:layout_gravity="center_horizontal" android:padding="20px">
    
    <SurfaceView android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:id="@+id/SurfaceViewCamera" android:minWidth="120px" android:minHeight="160px" android:layout_margin="20px"></SurfaceView>
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/ImageViewRx" android:background="@drawable/tachead" android:layout_margin="20px"></ImageView>
    
</LinearLayout>


</LinearLayout>
